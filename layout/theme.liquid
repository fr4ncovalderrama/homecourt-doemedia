<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    {{ content_for_header }}
    <!-- Header hook for plugins -->
    {{ 'base.css' | asset_url | stylesheet_tag }}
    {% comment %} This could be dynamic {% endcomment %}
    <style>
      :root{
        --bg-foreground: #2A4835;
        --bg-white:#ffffff;
        --color-black: #191919;
        --color-white:rgb(255, 255, 255);
        --color-gray: #555555;
        --color-darkgray:#333333;
        --color-foreground: #2A4835;

      }
    </style>
    <style>
      {{ settings.body_font | font_face: font_display:'swap' }}
      :root{
      --bodyFont: {{  settings.body_font.family }};
      --bodyFontWeight: {{ settings.body_font.weight }};
    }
    </style>
    {{ 'styles.css' | asset_url | stylesheet_tag }} 
  </head>
  <body class="">
    <a class="skip-to-content-link bg-black text-white absolute w-0 h-0 overflow-hidden focus:p-4 focus:w-auto focus:h-auto focus:z-[999]" href="#MainContent">
      Skip to content
    </a>
    
    {% sections 'header-group' %}
    
    <main id="MainContent" role="main">
      {{ content_for_layout }}
    </main>
    {% sections 'footer-group' %}

    {{ 'application.js' | asset_url | script_tag }}

  </body>
</html>